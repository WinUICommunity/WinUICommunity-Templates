<Page x:Class="WinUICommunity_VS_Templates.CSProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinUICommunity_VS_Templates"
             mc:Ignorable="d"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             Title="CSProjectPage"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer Margin="5" VerticalAlignment="Top">
        <StackPanel>
            <Separator Margin="0,10,0,5" HorizontalAlignment="Stretch" />
            <ui:InfoBar Title="This Options will be added into CSProject file." IsClosable="False" IsOpen="True" Severity="Informational" />
            <local:OptionUC x:Name="tgIncludeNativeLibrariesForSelfExtract" 
                            Title="1. Add IncludeNativeLibrariesForSelfExtract" Toggled="tgIncludeNativeLibrariesForSelfExtract_Toggled"/>
            <local:OptionUC x:Name="tgIncludeAllContentForSelfExtract"
                            Title="2. Add IncludeAllContentForSelfExtract" Toggled="tgIncludeAllContentForSelfExtract_Toggled" />
        </StackPanel>
    </ScrollViewer>

</Page>
