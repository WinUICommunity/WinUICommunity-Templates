<UserControl x:Class="WinUICommunity_VS_Templates.WizardUI.LibraryOptionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WinUICommunity_VS_Templates.WizardUI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Styles/TextStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <CheckBox x:Name="LibraryCheckBox"
                  Margin="5,10,5,8"
                  Checked="CheckBox_Checked"
                  Unchecked="CheckBox_Unchecked" />
        <TextBlock VerticalAlignment="Center"
                   MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Text="{Binding Title, RelativeSource={RelativeSource AncestorType=local:LibraryOptionUC}}" />
    </StackPanel>
</UserControl>
