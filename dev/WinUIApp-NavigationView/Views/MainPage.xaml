<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="$safeprojectname$.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:$safeprojectname$"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wuc="using:WinUICommunity"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar x:Name="appTitleBar"
                  Title="{x:Bind wuc:ProcessInfoHelper.GetProductName()}"
                  BackButtonClick="AppTitleBar_BackButtonClick"
                  Icon="{wuc:BitmapIcon Source=ms-appx:///Assets/icon.png}"
                  IsBackButtonVisible="True"
                  IsPaneButtonVisible="True"
                  PaneButtonClick="AppTitleBar_PaneButtonClick"
                  Subtitle="{x:Bind wuc:ProcessInfoHelper.GetVersionString}">
            <TitleBar.Content>
                <AutoSuggestBox PlaceholderText="Search"
                                QueryIcon="Find" />
            </TitleBar.Content>
            <TitleBar.Footer>
                <Button x:Name="ThemeButton"
                        Height="32"
                        Margin="0,0,4,0"
                        Click="ThemeButton_Click"
                        Content="{wuc:FontIcon GlyphCode=E793,
                                               FontSize=16}"
                        Style="{ThemeResource SubtleButtonStyle}"
                        ToolTipService.ToolTip="Toggle Theme" />
            </TitleBar.Footer>
        </TitleBar>
        <NavigationView x:Name="NavView"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsPaneToggleButtonVisible="False">

            <Frame x:Name="NavFrame"
                   Navigated="NavFrame_Navigated" />
        </NavigationView>
    </Grid>
</Page>

